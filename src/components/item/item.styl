.header {
  display: flex;
  margin: 0 15px;
  margin-top: 5px;
}

.header .leftIcon {
  flex: 1;
  margin-left: 5px;
}

.header .rightIcon {
  flex: 1;
  margin-right: 5px;
}

.subtext {
  display: flex;
  margin: 0 15px;
}

.subtext .author {
  flex: 1;
}

.subtext .time {
  flex: 1;
  text-align: right
}

.header .title {
  width: 100%
}

.itemfooter {
  padding-left: 14px;
  height: 12px;
  line-height: 12px;
  border-left: 1px solid #d9dde1;
  font-size: 12px;
  color: rgb(147, 153, 159);
  background: #f3f5f7;
}
